<%= page_header "North American Stores <small>#{@na_stores.count} records</small>".html_safe %>

<%= render partial: 'na_stores/table', locals: {na_stores: @na_stores} %>


<%= page_header "International Stores <small>#{@intl_stores.count} records</small>".html_safe %>

<%= render partial: 'intl_stores/table', locals: {intl_stores: @intl_stores} %>

<script>
  $(document).on('turbolinks:load', function(){
    $('.filter_by_input').hide();
  });
</script>

<script>
  $(document).on("turbolinks:load", function(){
    activateTable('#na_store_table', 'location', 'asc');
    updateCurrentPlaylistOnCheck('na');
    activateTable('#intl_store_table', 'country', 'asc');
    updateCurrentPlaylistOnCheck('intl');

    $('.filter_by_input').hide();
    $('.filter_term_clearer').hide();
    // Remove links
    var head_row = $('thead');
    for(var i = 0; i  < head_row.length; i++){
      var headers = $(head_row[i]).find('th');

      for(var j = 1; j < headers.length; j++){
        // skip first column, so start at 1
        var header = $(headers[j]);
        var link = header.find('a');
        if(link.length > 0){
          header.html(link.text());
        }
      }
    }
  });
</script>
